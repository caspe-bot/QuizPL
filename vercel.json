{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
      },
    {
      "src": "client/src/index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
       }
    ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
    ]
  }
