{
"version": 2,
  "builds": [
     { "src": "api/**/*.ts", "use": "@vercel/node" },
     {
"src": "client/package.json",
 "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ]
}
],
"routes": [
  { "src": "/api/(.*)", "dest": "/api/$1" },
  { "src": "/(.*)", "dest": "/client/dist/$1" }
  ]
}
